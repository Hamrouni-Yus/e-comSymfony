{% extends 'base.html.twig' %}

{% block title %}Valider ma commande{% endblock %}

{% block content %}
<h2>Je passe ma commande</h2>
<p>Choisissez vos preference de commande.</p>
<hr>
<div class="row">
    <div class="col-md-6">
        {% set formHtml %}
        {{ form(form) }}
        {% endset %}
        {{ formHtml|replace({'[br]' : '<br>'})|raw }}
    </div>
    <div class="col-md-6">
        <div class="text-center">
            <b>Recap de ma commande</b><br>
            <p>Retrouvez le recapitulatif de vos produits</p>
        </div>
        <div class="order-summary">
            {% for key,product in cart %}
            <div class="row {% if key > 0 %}my-5{% endif %}">
                <div class="col-2">
                    <img src="/uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}"
                        class="img-fluid" style='height:50px;'>
                </div>
                <div class="col-8 my-auto">
                    {{product.product.name }} <br>
                    <small>{{ product.product.subtitle }}</small>
                </div>
                <div class="col-2 my-auto">
                    x {{ product.quantity }}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}